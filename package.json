        "@navikt/ds-react": "^7.40.0",
        "@navikt/ds-tailwind": "^7.40.0",
        "@navikt/ds-tokens": "^7.40.0",
        "@navikt/nav-dekoratoren-moduler": "^3.6.2",
        "@navikt/next-api-proxy": "^4.1.5",
        "@navikt/next-logger": "^3.0.3",
        "@navikt/oasis": "^3.8.0",
        "@tanstack/react-query": "^5.90.21",
        "@tanstack/react-query-devtools": "^5.91.3",
        "@types/smoothscroll-polyfill": "^0.3.4",
        "@unleash/nextjs": "^1.6.4",
        "classnames": "^2.5.1",
        "cookie": "^1.1.1",
        "dayjs": "^1.11.19",
        "html-react-parser": "^5.2.17",
        "jose": "^6.1.3",
        "next-logger": "^5.0.2",
        "nextleton": "^0.6.1",
        "node-cache": "^5.1.2",
        "node-fetch": "^3.3.2",
        "pino-pretty": "^13.1.3",
        "prom-client": "^15.1.3",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-hook-form": "^7.71.2",
        "remeda": "^2.33.6",
        "tailwind-merge": "^3.5.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.1",
        "@navikt/eslint-config-teamsykmelding": "^7.1.0",
        "@playwright/test": "^1.58.2",
        "@tailwindcss/postcss": "^4.1.18",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/classnames": "^2.3.4",
        "@types/jsdom": "^21.1.7",
        "@types/node": "~22.10.5",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-react": "^4.7.0",
        "axe-core": "^4.11.1",
        "eslint": "^8.57.1",
        "eslint-config-next": "^15.5.12",
        "eslint-plugin-playwright": "^2.5.1",
        "jsdom": "^26.1.0",
        "next": "^16.1.6",
        "postcss": "^8.5.6",
        "prettier": "^3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "start-server-and-test": "^2.1.3",
        "tailwindcss": "^4.1.16",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "scripts": {
        "dev": "MOCK_BACKEND=true next dev -p 3000  | pino-pretty",
        "local": "LOCAL_BACKEND=true next dev -p 3000 | pino-pretty",
        "dev-ingen-dekorator": "MOCK_BACKEND=true NO_DECORATOR=true npm run dev  | pino-pretty",
        "start": "next start -p 3000",
        "start-ingen-dekorator": "NO_DECORATOR=true npm start",
        "build": "next build",
        "test": "MOCK_BACKEND=true vitest",
        "test:ci": "vitest --run",
        "play": "PLAYWRIGHT_ALL=true npx playwright test --ui",
        "play-headless": "npx playwright test",
        "play-build": "export PLAYWRIGHT_ALL=true BUILD=true; npm run build && npx playwright test --ui",
        "play-headless-build": "export BUILD=true; npm run build && npx playwright test",
        "prettier:write": "prettier --write .",
        "prettier:check": "prettier --check .",
        "tsc": "tsc",
        "lint": "eslint --ext=ts,tsx src playwright",
        "lint:fix": "eslint --ext=ts,tsx src playwright --fix",
        "format": "npm run prettier:write && npm run lint:fix"
    },
    "eslintConfig": {
        "extends": [
            "@navikt/eslint-config-teamsykmelding",
            "next/core-web-vitals"
        ],
        "rules": {
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@next/next/no-img-element": "off"
        },
        "overrides": [
            {
                "files": [
                    "**/playwright/**/*.{js,ts}"
                ],
                "extends": [
                    "plugin:playwright/recommended"
                ],
                "rules": {
                    "testing-library/prefer-screen-queries": "off",
                    "playwright/require-top-level-describe": "error",
                    "playwright/expect-expect": "off"
                }
            }
        ]
    },
    "prettier": "@navikt/eslint-config-teamsykmelding/prettier",
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.57.1"
    }
}
